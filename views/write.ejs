<html lang="en">
    <%- include header %>
        <div class="container" style="">
            <h2>Write your secrets</h2>
            
            <form action="/home/write/save" method="POST">
                <% if (message.length > 0) { %>
                    <div class="alert alert-success col-sm-12"><%= message %></div>
                <% } %>
                <% if (errmessage.length > 0) { %>
                <div class="alert alert-danger col-sm-12"><%= errmessage %></div>
                <% } %>
                <div class="form-group">
                  <label for="title">Title</label>
                  <input type="text" class="form-control" id="" placeholder="Title or Name of secret" name="title" required>
                </div>
                <div class="form-group">
                  <label for="date">Date</label>
                  <input type="text" class="form-control" id="" placeholder="Date" name="date" value="<%= new Date().toDateString();%>" disabled>  </div>
                <div class="form-group">
                    <label for="Secret">Secret</label>
                    <textarea class="form-control" id="textarea" name="secret"  rows="10" placeholder="Write your secrets"></textarea>
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
              </form>
        </div>
        <script type="text/javascript">
                
                var x = document.getElementById("write");
                var y = document.getElementById("home");
                y.className = y.className.replace("active","");
                if(x.className.indexOf("active") == -1 && y.className.indexOf("active") == -1){
                    x.className += " active";
                }else{
                    y.className = y.className.replace(" active"," ");
                    x.className = x.className.replace(" active","");
                }
              
                   
                
                    

           
        </script>
    <%- include footer %>